{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "google"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "require-jsdoc": 0,
    "valid-jsdoc": 0
    // 上記二つを記載しないと関数にコメントをつけてくださいとエラーが出る
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
